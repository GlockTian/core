// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/.prisma/api-languages-client"
}

datasource db {
  provider = "postgresql"
  url      = env("PG_DATABASE_URL")
}

model Language {
  id            String    @id @default(uuid())
  name          LanguageNameTranslation[]
  bcp47         String?   
  iso3          String?
}

model LanguageNameTranslation {
  languageId    String
  value         String  
  primary       Boolean   @default(false)
  language      Language  @relation(fields: [parentLanguageId], references: [id])
  parentLanguageId String
  @@id([languageId, parentLanguageId])
}
