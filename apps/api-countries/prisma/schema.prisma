// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/.prisma/api-countries-client"
}

datasource db {
  provider = "postgresql"
  url      = env("PG_DATABASE_URL")
}

model Country {
  id            String    @id @default(uuid())
  name          CountryNameTranslation[]
  slug          CountrySlugTranslation[]
  population    Int
  continent     CountryContinentTranslation[]
  languageIds   String[]
  latitude      Float
  longitude     Float
  image         String?
}

model CountryNameTranslation {
  languageId    String
  value         String  
  primary       Boolean   @default(false)
  country Country   @relation(fields: [countryId], references: [id])
  countryId String
  @@id([countryId, languageId])
}

model CountrySlugTranslation {
  languageId    String
  value         String    
  primary       Boolean   @default(false)
  country Country   @relation(fields: [countryId], references: [id])
  countryId String
  @@id([countryId, languageId])
  @@index([value])
}

model CountryContinentTranslation {
  languageId    String
  value         String  
  primary       Boolean   @default(false)
  country Country   @relation(fields: [countryId], references: [id])
  countryId String
  @@id([countryId, languageId])
}